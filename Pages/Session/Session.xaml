<Page x:Class="car.Pages.Session.Session"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:car.Pages.Session"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Session">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Hello" FontSize="18" Grid.Column="0"/>
        <Button x:Name="btLogin" Content="Login" Click="Login" Width="75" Grid.Column="1"/>
        <Button x:Name="btLogout" Content="Logout" Click="Logout" Visibility="Collapsed" Width="75" Grid.Column="1"/>
    </Grid>
</Page>
