<Page x:Class="car.Pages.Main.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:car.Pages.Main"
      xmlns:session="clr-namespace:car.Pages.Session"
      xmlns:root="clr-namespace:car"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main"
      >

    <Page.DataContext>
        <local:MainWindowDataContext />
    </Page.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160" />
            <ColumnDefinition Width="960*" />
            <ColumnDefinition Width="160" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="Seller" Visibility="{Binding SellerVisiblity.SellerVisibility, Mode=OneWay}" x:Name="miSeller" Click="miSeller_Click" />

                <MenuItem Header="Admin" Visibility="{Binding AdminVisibility.AdminVisibility, Mode=OneWay}" x:Name="miAdmin" Click="miAdmin_Click" />
            </MenuItem>
        </Menu>

        <Label Content="Autóskereskedés" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"
        FontSize="32" FontWeight="Bold"/>

        <Frame Grid.Column="2" Grid.Row="0" Source="/Pages/Session/Session.xaml" />
    </Grid>
</Page>
