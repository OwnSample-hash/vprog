<Page x:Class="car.Pages.Main.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:car.Pages.Main"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">

    <Page.DataContext>
        <local:MainWindowDataContext />
    </Page.DataContext>

    <Grid>
      
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="160" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        
        <Menu Grid.ColumnSpan="3">
            <MenuItem Header="File">
                <MenuItem Header="Seller" Visibility="{Binding SellerVisiblity.SellerVisibility}" Click="miSeller_Click"/>
                <MenuItem Header="Admin"  Visibility="{Binding AdminVisibility.AdminVisibility}"  Click="miAdmin_Click"/>
            </MenuItem>
        </Menu>


        <Label Grid.Row="0" Grid.Column="1"
           Content="Autóskereskedés"
           VerticalAlignment="Center"
           HorizontalAlignment="Center"
           FontSize="32" FontWeight="Bold"/>

        <Frame Grid.Row="0" Grid.Column="2"
           Source="/Pages/Session/Session.xaml" />

        <ListBox x:Name="CatalogList"
             Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
             ItemsSource="{Binding cars.cars}"
             BorderThickness="0"
             SelectionMode="Single">
              
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Button Width="250" Height="175" Click="Button_Click">
                        <StackPanel Margin="8">
                            <Label Content="{Binding Id}" Visibility="Collapsed"/>
                            <Image Source="{Binding Pics[0]}" Stretch="UniformToFill"/>
                            <TextBlock Text="{Binding Name}" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StatusBar Grid.Row="2" Grid.ColumnSpan="3">
            <TextBlock Text="© 2025 Autóskereskedés" />
        </StatusBar>
    </Grid>
</Page>
